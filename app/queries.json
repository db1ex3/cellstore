{
    "apiVersion": "1.0",
    "swaggerVersion": "1.2",
    "basePath": "http://secxbrl.alpha.xbrl.io/v1/_queries/public/api",
    "resourcePath": "",
    "produces": [
        "application/json"
    ],
    "description": "<p>This API can be used to retrieve information about entities, filings, components, or facttables. All information is available as JSON, XML, or CSV (default JSON).</p><p>Please note that information outside of the DOW30 can only be accessed using a valid token that can be retrieved by creating an account on http://www.secxbrl.info and login is done using the Session API.</p><p>Also note, that the POST method can be simulated by using GET and adding the _method=POST parameter to the HTTP request.</p>",
    "apis": [
        {
            "path": "/entities.jq.{format}",
            "description": "Entities",
            "operations": [
                {
                    "method": "POST",
                    "summary": "Retrieve information about all or a selection of entities",
                    "notes": "",
                    "type": "EntityListing",
                    "nickname": "listEntities",
                    "parameters": [
                        {
                            "name": "format",
                            "description": "The result format",
                            "required": false,
                            "type": "string",
                            "enum": [
                                "json",
                                "text",
                                "xml"
                            ],
                            "paramType": "path"
                        },
                        {
                            "name": "index",
                            "description": "A stock index",
                            "required": false,
                            "type": "string",
                            "enum": [
                                "DOW30",
                                "SP500",
                                "FORTUNE100"
                            ],
                            "paramType": "query"
                        },
                        {
                            "name": "cik",
                            "description": "A CIK number",
                            "required": false,
                            "type": "string",
                            "paramType": "query"
                        },
                        {
                            "name": "ticker",
                            "description": "A ticker symbols",
                            "required": false,
                            "type": "string",
                            "paramType": "query"
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 401,
                            "message": "Unauthorized: the specified project token is invalid, expired, or has insufficient privliges",
                            "responseModel": "Error"
                        },
                        {
                            "code": 500,
                            "message": "An internal error occurred during the processing of the request.",
                            "responseModel": "Error"
                        }
                    ],
                    "successMessages": [
                        {
                            "code": 200,
                            "message": "Returns query listing."
                        }
                    ],
                    "examples": [
                        {
                            "title": "Retrieve a specific entity",
                            "description": "",
                            "request": "curl -X POST http://xbrl-msb.alpha.xbrl.io/v1/_queries/public/api/entities.jq?cik=1412090",
                            "response": "[ { \"_id\" : \"http://www.sec.gov/CIK 0001412090\", \"Profiles\" : { \"SEC\" : { \"Name\" : \"SEC\", \"CompanyName\" : \"BTHC XV, Inc.\", \"CompanyType\" : \"Corporation\", \"CIK\" : \"0001412090\", \"SIC\" : \"7900\", \"SICDescription\" : \"SERVICES-AMUSEMENT & RECREATION SERVICES\", \"SICGroup\" : 5, \"Taxonomy\" : \"ci\", \"Sector\" : \"Amusement/Recreation Services\", \"Tickers\" : [ \"btxv\" ], \"IsTrust\" : false } } } ]"
                        },
                        {
                            "title": "Retrieve all entities",
                            "description": "",
                            "request": "curl -X POST http://xbrl-msb.alpha.xbrl.io/v1/_queries/public/api/entities.jq",
                            "response": "[ { \"_id\" : \"http://www.sec.gov/CIK 0000886475\", \"Profiles\" : { \"SEC\" : { \"Name\" : \"SEC\", \"CompanyName\" : \"'mktg, inc.'\", \"CompanyType\" : \"Corporation\", \"CIK\" : \"0000886475\", \"SIC\" : \"7310\", \"SICDescription\" : \"SERVICES-ADVERTISING\", \"SICGroup\" : 11, \"Taxonomy\" : \"ci\", \"Sector\" : \"Business Services\", \"Tickers\" : [ \"cmkg\" ], \"IsTrust\" : false } } }, { \"_id\" : \"http://www.sec.gov/CIK 0001084869\", \"Profiles\" : { \"SEC\" : { \"Name\" : \"SEC\", \"CompanyName\" : \"1 800 FLOWERS COM INC\", \"CompanyType\" : \"Corporation\", \"CIK\" : \"0001084869\", \"SIC\" : \"5990\", \"SICDescription\" : \"RETAIL-RETAIL STORES, NEC\", \"SICGroup\" : 2, \"Taxonomy\" : \"ci\", \"Sector\" : \"Miscellaneous Retail\", \"Tickers\" : [ \"flws\" ], \"IsTrust\" : false } } }, ... ]"
                        },
                        {
                            "title": "Retrieve DOW30 entity information as CSV",
                            "description": "",
                            "request": "curl -X POST http://xbrl-msb.alpha.xbrl.io/v1/_queries/public/api/entities.jq.text?index=DOW30",
                            "response": "[ { \"_id\" : \"http://www.sec.gov/CIK 0000066740\", \"Profiles\" : { \"SEC\" : { \"Name\" : \"SEC\", \"CompanyName\" : \"3M CO\", \"CompanyType\" : \"Corporation\", \"CIK\" : \"0000066740\", \"SIC\" : \"3841\", \"SICDescription\" : \"SURGICAL & MEDICAL INSTRUMENTS & APPARATUS\", \"SICGroup\" : 10, \"Taxonomy\" : \"ci\", \"Sector\" : \"Measuring/Analyzing/Photographic/Control/Medical Instruments\", \"Tickers\" : [ \"mmm\" ], \"Tags\" : [ \"DOW30\", \"SP500\", \"FORTUNE100\" ], \"IsTrust\" : false } } }, { \"_id\" : \"http://www.sec.gov/CIK 0000004281\", \"Profiles\" : { \"SEC\" : { \"Name\" : \"SEC\", \"CompanyName\" : \"ALCOA INC\", \"CompanyType\" : \"Corporation\", \"CIK\" : \"0000004281\", \"SIC\" : \"3350\", \"SICDescription\" : \"ROLLING DRAWING & EXTRUDING OF NONFERROUS METALS\", \"SICGroup\" : 6, \"Taxonomy\" : \"ci\", \"Sector\" : \"Primary Metal Industries\", \"Tickers\" : [ \"aa\" ], \"Tags\" : [ \"DOW30\", \"SP500\" ], \"IsTrust\" : false } } }, ... ]"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/filings.jq.{format}",
            "description": "Filings",
            "operations": [
                {
                    "method": "POST",
                    "summary": "Retrieve the filings of a particular entity",
                    "notes": "",
                    "nickname": "listFilings",
                    "parameters": [
                        {
                            "name": "format",
                            "description": "The result format",
                            "required": false,
                            "type": "string",
                            "enum": [
                                "json",
                                "text",
                                "xml"
                            ],
                            "paramType": "path"
                        },
                        {
                            "name": "cik",
                            "description": "The CIK of the entity",
                            "required": true,
                            "type": "string",
                            "paramType": "path"
                        },
                        {
                            "name": "token",
                            "description": "The token of the current session (if accessing entities beyond DOW30)",
                            "required": false,
                            "type": "string",
                            "paramType": "path"
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 401,
                            "message": "Unauthorized: the specified project token is invalid, expired, or has insufficient privliges",
                            "responseModel": "Error"
                        },
                        {
                            "code": 500,
                            "message": "An internal error occurred during the processing of the request.",
                            "responseModel": "Error"
                        }
                    ],
                    "successMessages": [
                        {
                            "code": 200,
                            "message": "Returns all filings for the given entity."
                        }
                    ],
                    "examples": [
                        {
                            "title": "Retrieve all DOW30 companies",
                            "description": "",
                            "request": "curl  -X POST  'http://xbrl-msb.alpha.xbrl.io/v1/_queries/public/api/filings.jq.xml?cik=66740'",
                            "response": "<Filings>\n  <Filing>\n    <CIK>http://www.sec.gov/CIK 0000066740</CIK>\n    <EntityRegistrantName>3M CO</EntityRegistrantName>\n    <FormType>10-Q</FormType>\n    <FiscalYear>2013</FiscalYear>\n    <FiscalPeriod>Q3</FiscalPeriod>\n    <Accepted>2013-10-31</Accepted>\n    <Generator>IBM Cognos</Generator>\n    <AccessionNumber>0001104659-13-079583</AccessionNumber>\n    <SECFilingPage>http://www.sec.gov/Archives/edgar/data/66740/000110465913079583/0001104659-13-079583-index.htm</SECFilingPage>\n    <XBRLInstanceURL>http://www.sec.gov/Archives/edgar/data/66740/000110465913079583/mmm-20130930.xml</XBRLInstanceURL>\n  </Filing>\n...\n</Filings>"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/components.jq.{format}",
            "description": "Components",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Retrieve a summary for all components of a given filing",
                    "notes": "",
                    "type": "EntityListing",
                    "nickname": "listEntities",
                    "parameters": [
                        {
                            "name": "format",
                            "description": "The result format",
                            "required": false,
                            "type": "string",
                            "enum": [
                                "json",
                                "text",
                                "xml"
                            ],
                            "paramType": "path"
                        },
                        {
                            "name": "aid",
                            "description": "The ID of the filing",
                            "required": false,
                            "type": "string",
                            "paramType": "path"
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 401,
                            "message": "Unauthorized: the specified project token is invalid, expired, or has insufficient privliges",
                            "responseModel": "Error"
                        },
                        {
                            "code": 500,
                            "message": "An internal error occurred during the processing of the request.",
                            "responseModel": "Error"
                        }
                    ],
                    "successMessages": [
                        {
                            "code": 200,
                            "message": "Returns all components for the given filing"
                        }
                    ],
                    "examples": [
                        {
                            "title" : "Retrieve Component",
                            "description": "Retrieve all comoponents for the accession number 0001193125-10-104261",
                            "request": "curl  -X POST  'http://xbrl-msb.alpha.xbrl.io/v1/_queries/public/api/components.jq.json?aid=0001193125-10-104261&token=...'",
                            "response": "{\n\"CIK\" : \"http://www.sec.gov/CIK 0000108772\",\n\"EntityRegistrantName\" : \"XEROX CORP\",\n\"Components\" : [\n{\n  \"ComponentId\" : \"bff54a99-6aaf-4c42-8156-1b112fdac8d6\",\n  \"AccessionNumber\" : \"0001193125-10-104261\",\n  \"NetworkLabel\" : \"001000 - Statement - Condensed Consolidated Statements of Income (Unaudited)\",\n  \"NetworkIdentifier\" : \"http://xerox.com/role/IncomeStatement\",\n  \"Category\" : \"Statement\",\n  \"SubCategory\" : \"Detail\",\n  \"Table\" : \"bizql:ImpliedTable\",\n  \"Disclosure\" : \"IncomeStatement\" \n },{\n  \"ComponentId\" : \"8db6a185-b987-475c-9e8d-9a93c4240125\",\n  \"AccessionNumber\" : \"0001193125-10-104261\",\n  \"NetworkLabel\" : \"002000 - Statement - Condensed Consolidated Balance Sheets (Unaudited)\",\n  \"NetworkIdentifier\" : \"http://xerox.com/role/BalanceSheet\",\n  \"Category\" : \"Statement\",\n  \"SubCategory\" : \"Detail\",\n  \"Table\" : \"bizql:ImpliedTable\",\n  \"Disclosure\" : \"BalanceSheet\" \n}\n...\n]\n}"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/facttable.jq.{format}",
            "description": "Retrieve a Fact Table",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Retrieve the fact table for a components",
                    "notes": "",
                    "type": "EntityListing",
                    "nickname": "listEntities",
                    "parameters": [
                        {
                            "name": "format",
                            "description": "The result format",
                            "required": false,
                            "type": "string",
                            "enum": [
                                "json",
                                "text",
                                "xml"
                            ],
                            "paramType": "path"
                        },
                        {
                            "name": "cid",
                            "description": "The id of the component",
                            "required": false,
                            "type": "string",
                            "paramType": "path"
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 401,
                            "message": "Unauthorized: the specified project token is invalid, expired, or has insufficient privliges",
                            "responseModel": "Error"
                        },
                        {
                            "code": 500,
                            "message": "An internal error occurred during the processing of the request.",
                            "responseModel": "Error"
                        }
                    ],
                    "successMessages": [
                        {
                            "code": 200,
                            "message": "Return the fact table for the given Component"
                        }
                    ],
                    "examples": [
                        {
                            "title": "Fact Table as CSV",
                            "description": "Retrieve a fact table and render it as CSV.",
                            "request": "curl  -X POST  'http://xbrl-msb.alpha.xbrl.io/v1/_queries/public/api/facttable.jq.text?cid=8db6a185-b987-475c-9e8d-9a93c4240125&token=...'",
                            "response": "\"xbrl:Concept\",\"xbrl:Entity\",\"xbrl:Period\",\"xbrl:Unit\",\"Value\" \n\"us-gaap:AccountsPayable\",\"http://www.sec.gov/CIK 0000108772\",\"2010-03-31\",\"iso4217:USD\",\"1659000000\"\n\"us-gaap:AccountsPayable\",\"http://www.sec.gov/CIK 0000108772\",\"2009-12-31\",\"iso4217:USD\",\"1451000000\""
                        }
                    ]
                }
            ]
        },
        {
            "path": "/facts.jq.{format}",
            "description": "Retrieve Facts",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Retrieve one or more facts",
                    "notes": "",
                    "type": "FactListing",
                    "nickname": "listFact",
                    "parameters": [
                        {
                            "name": "format",
                            "description": "The result format",
                            "required": false,
                            "type": "string",
                            "enum": [
                                "json",
                                "text",
                                "xml"
                            ],
                            "paramType": "path"
                        },
                        {
                            "name": "cik",
                            "description": "The CIK of the entity",
                            "required": false,
                            "type": "string",
                            "paramType": "path"
                        },
                        {
                            "name": "ticker",
                            "description": "The ticker of the entity",
                            "required": false,
                            "type": "string",
                            "paramType": "path"
                        },
                        {
                            "name": "index",
                            "description": "The stock index of the entity",
                            "required": false,
                            "type": "string",
                            "enum": [
                                "DOW30",
                                "SP500",
                                "FORTUNE100"
                            ],
                            "paramType": "path"
                        },
                        {
                            "name": "year",
                            "description": "The fiscal year of the fact to retrieve",
                            "required": true,
                            "type": "string",
                            "paramType": "path"
                        },
                        {
                            "name": "concept",
                            "description": "The name of the concept to retrieve the fact for",
                            "required": true,
                            "type": "string",
                            "paramType": "path"
                        },
                        {
                            "name": "period",
                            "description": "The fiscal period of the fact to retrieve (default: FY)",
                            "required": false,
                            "type": "string",
                            "paramType": "path"
                        },
                        {
                            "name": "map",
                            "description": "The concept map that should be used to resolve the concept (default: none)",
                            "required": false,
                            "type": "string",
                            "enum": [
                                "FundamentalAccountingConcepts  <a href=\"/concept-map/FundamentalAccountingConcepts\"><i class=\"fa fa-question\"></i>"
                              ],
                            "paramType": "path"
                        },
                        {
                            "name": "token",
                            "description": "The token of the current session (if accessing entities beyond DOW30)",
                            "required": false,
                            "type": "string",
                            "paramType": "path"
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 400,
                            "message": "Bad request: a parameter is missing or invalid",
                            "responseModel": "Error"
                        },
                        {
                            "code": 401,
                            "message": "Unauthorized: the specified project token is invalid, expired, or has insufficient privliges",
                            "responseModel": "Error"
                        },
                        {
                            "code": 500,
                            "message": "An internal error occurred during the processing of the request.",
                            "responseModel": "Error"
                        }
                    ],
                    "successMessages": [
                        {
                            "code": 200,
                            "message": "Returns the fact listing",
                            "responseModel": "FactListing"
                        }
                    ],
                    "examples": [
                        {
                            "title": "Retrieve DOW30's us-gaap:Assets for FY 2012",
                            "description": "Retrieve all the us-gaap:Assets concepts reported for all DOW30 companies in the period FY and year 2012 as JSON",
                            "request": "curl -X POST 'xbrl-msb.alpha.xbrl.io/v1/_queries/public/api/fact.jq?year=2012&concept=us-gaap:Assets&index=dow30'",
                            "response": "[\n  {\n    \"CIK\": \"http://www.sec.gov/CIK 0000200406\",\n    \"CompanyName\": \"JOHNSON & JOHNSON\",\n    \"Concept\": \"us-gaap:Assets\",\n    \"Decimals\": -6,\n    \"Period\":   \"FY\",\n    \"Type\": \"NumericValue\",\n    \"Unit\": \"iso4217:USD\",\n    \"Value\": 121347000000,\n    \"Year\": 2012\n  },\n  {\n    \"CIK\": \"http://www.sec.gov/CIK 0000063908\",\n    \"CompanyName\": \"MCDONALDS CORP\",\n    \"Concept\": \"us-gaap:Assets\",\n    \"nDecimals\": -5,\n    \"Period\": \"FY\",\b  \"Type\": \"NumericValue\",\n    \"Unit\": \"iso4217:USD\",\n    \"Value\": 35386500000,\n    \"Year\": 2012\n  }\n  , ... \n]"
                        }
                    ]
                }
            ]
        }


    ],
    "models": {
        "Error": {
            "id": "Error",
            "description": "Error information",
            "required": [
                "success",
                "description"
            ],
            "properties": {
                "success": {
                    "type": "boolean",
                    "description": "Whether the requests succeeded or failed."
                },
                "description": {
                    "type": "string",
                    "description": "A description of the error."
                }
            }
        }
    }
}
